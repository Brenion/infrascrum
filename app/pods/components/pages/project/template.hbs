{{!-- template-lint-disable no-unused-block-params --}}
<div class='flex m-6 shadow-xl'>
  <img
    src={{@model.image}}
    alt='Projet'
    class='w-48 h-38 rounded-l-md object-cover'
  />

  <div class='flex flex-col ml-12 p-4 w-2/3 h-40'>
    <h3 class='font-bold text-xl'>{{@model.projectName}}</h3>
    <p class='mt-2 overflow-y-scroll'>{{@model.description}} </p>
  </div>
</div>

<div class='flex'>
  {{#each @model.elements as |element|}}
    {{! template-lint-disable no-inline-styles }}
    {{! template-lint-disable style-concatenation }}

    <div class='flex flex-col'>

      <div
        class='m-6 rounded-xl flex items-center w-80 justify-between'
        style='
    --tw-shadow: 0 1px 6px -1px {{element.colorElement}}, 0 1px 4px -2px {{element.colorElement}};
    --tw-shadow-colored: 0 4px 6px -1px var(--tw-shadow-color), 0 2px 4px -2px var(--tw-shadow-color);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
'
      >
        <div
          class='w-20 h-10 rounded-l-xl mr-8'
          style='background-color:{{element.colorElement}}'
        ></div>
        <p>{{element.nameElement}}</p>
        <div class='flex items-center'>

          <button type='button' class='px-2 text-middleblue'><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='1'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z'
              ></path>
            </svg></button>
          <button type='button' class='pr-4 text-red-400'><svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='2'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z'
              ></path>
            </svg></button>
        </div>
      </div>

      <div class='flex flex-col mx-2'>
        {{#each element.tasks as |task|}}
        {{#each @model.users as |user|}}
          <div class='bg-chartreuse p-4 mb-2'>
            <div
              class='flex justify-between items-center rounded-xl bg-red-300'
            >
              <p class='ml-2'>{{task.title}}</p>
              <div
                class='w-10 h-10 rounded-r-xl'
                style='background-color: {{task.colorTask}} '
              ></div>
            </div>
            <div class='flex'>
              <div class='bg-blue-200 rounded-xl w-2/3'>
                <p class='ml-2'>{{task.description}} </p>
              </div>
              <div class='w-1/3 bg-white'>
                <p>Last commentaire</p>
              </div>
            </div>
            <div class=" bg-rose-800 rounded-xl flex items-center p-2">
              <img src={{user.image}} alt="user" class="rounded-full w-10 h-10 ml-2">
              <p class="ml-2">{{user.username}} </p>
            </div>
            <div class='mb-6 bg-green-300 rounded-xl flex justify-between items-center'>
              <p class='ml-2'>{{task.time}} </p>
              {{!-- template-lint-disable require-input-label --}}
              <div class="flex items-center">
              <label for="checkbox" class="mr-2">Terminer: </label>
              <input type="checkbox" class="mr-4"/>
              </div>
            </div>
          </div>
          {{/each}}
          {{#each task.checklists as |tc|}}{{/each}}
        {{/each}}
      </div>
      {{! Cette div sert au flex de mes couille }}
    </div>
  {{/each}}
</div>

{{yield}}