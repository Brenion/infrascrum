{{#if this.isExpand}}

  <div
    class='relative flex flex-col bg-middlegray h-screen text-gray-600 rounded-r-lg shadow-xl'
  >
    <div id='arrow left' class='flex justify-end mb-4'>
      <button
        type='button'
        class='absolute top-2 right-2'
        {{on 'click' this.shrinkNavbar}}
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='h-6 w-6'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
          stroke-width='2'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z'
          ></path>
        </svg>
      </button>
    </div>
    <div class=''>
      <div class='w-40 flex flex-col items-center'>

        <LinkTo
          @route='projects'
          class='mt-8 px-6 py-2 border-b-2 text-xl border-gray-200 font-semibold'
        >Projects</LinkTo>

        <div class='flex justify-between items-center mt-4'>
          <div>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-10 w-10'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='2'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M4 6h16M4 10h16M4 14h16M4 18h16'
              ></path>
            </svg>
          </div>
          <div>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-10 w-10'
              viewBox='0 0 20 20'
              fill='currentColor'
            >
              <path
                d='M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z'
              ></path>
            </svg>
          </div>
        </div>

        {{! add project }}

        <LinkTo @route='projects.newproject' class='py-2 text-blue-500'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='h-8 w-8'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
            stroke-width='2'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z'
            ></path>
          </svg>
        </LinkTo>

      </div>
    </div>

    <div class=''>
      <div class='w-40 flex flex-col items-center relative'>
        <h1
          class='mt-6 px-4 py-2 border-b-2 text-xl font-semibold border-gray-200'
        >Elements</h1>
        <div class='flex justify-between items-center mt-4'>
          <div>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-10 w-10'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='2'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M4 6h16M4 10h16M4 14h16M4 18h16'
              ></path>
            </svg>
          </div>
          <div class='rotate-90'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-10 w-10'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='2'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M4 6h16M4 10h16M4 14h16M4 18h16'
              ></path>
            </svg>
          </div>
        </div>

        {{! add Element }}

        <button
          type='button'
          {{on 'click' this.visibleElement}}
          class='py-2 text-blue-500'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='h-8 w-8'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
            stroke-width='2'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z'
            ></path>
          </svg>
        </button><div class='absolute left-40 top-0 flex justify-center'>
          {{#if this.visible.isVisibleElement}}
            <Form::Element @model={{@model}} />

          {{/if}}</div>
      </div>

    </div>
    <div class='mt-8'>
      <div class='w-40 flex flex-col items-center'>
        <h1
          class='mt-6 px-10 py-2 border-b-2 text-xl font-semibold border-gray-200'
        >Tasks</h1>
        <div class='flex justify-between items-center mt-4'>

          <LinkTo @route='projects.newproject' class='py-2 text-blue-500'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-8 w-8'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              stroke-width='2'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z'
              ></path>
            </svg>
          </LinkTo>
        </div>
      </div>
      <div class='h-80'></div>
    </div>
  </div>

{{else}}

  <div
    class='relative flex flex-col bg-middlegray h-screen text-gray-600 w-14 rounded-r-lg shadow-xl'
  >
    <button
      type='button'
      class='absolute top-2 right-2'
      {{on 'click' this.expandNavbar}}
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-6 w-6'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z'
        ></path>
      </svg>
    </button>
  </div>
{{/if}}