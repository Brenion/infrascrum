
<div class=" formBackground sm:py-12">
 <div class="formContainer xs:p-0">
      <div>
      <img src='../images/logo.png' alt='infrascrum' class='w-12 mx-auto' />
    </div>
    <h1 class='font-bold text-center text-3xl mb-5'>
      ElEmEnts...
    </h1>
   
    {{!-- {{#each this.element.itemList as |item|}} --}}
    <div class="form">
        <form class="px-5 py-7">
             <Input class="input"
                    @type="text" 
                    {{!-- @value={{this.element.name}}  --}}
                    placeholder="Nouveau Element" 
                     />
        
            <Input class="input"
                    @type="color" 
                    placeholder="color" 
                  />
        </form>
        
        <div class="py-5">
          <div class=" flex items-center justify-between">
             <button 
                class="btnSecondary"
                type="submit" 
                disabled={{this.isAddButtonDisabled}}
             >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block align-text-top" 
                   fill="none"         viewBox="0 0 24 24" stroke="currentColor"  stroke-width="2">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
               </svg>
                <span class='inline-block ml-1'>
                Upload
              </span>
               
            </button>
          
            <a class="btnSecondary" href="#">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block align-text-bottom" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
             </svg>
              <span class='inline-block ml-1'>
                Remove
              </span>
             
           </a>
          </div>
       </div>
    </div>

 </div>
</div>

