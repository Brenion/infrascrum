{{! template-lint-disable require-input-label }}
<div class='left-0 top-0 flex-justify-center pt-12 w-full'>
  <div class='flex justify-center'>
    <div class='formBackground w-2/3'>

      {{! ----------logo + title -------- }}
      <div class='p-4 mt-2 mx-auto'>
        <div>
          <img src='/images/logo.png' alt='infrascrum' class='w-8 mx-auto' />
        </div>
        {{#if @model.id}}
          <h1
            class='text-2xl text-center font-bold text-gray-600 mb-2'
          >Taskboard</h1>
        {{else}}
          <h1 class='text-2xl text-center font-bold text-gray-600 mb-2'>New task</h1>
        {{/if}}
      </div>

      <div
        class='bg-white shadow w-full rounded-b-lg px-5 py-7 border border-4 h-162'
        style=' border-color:{{this.selectTask.colorTask}}'
      >
        <form {{on 'submit' this.saveTask}}>
          <div class='flex'>
            <div class='w-1/2'>

              {{! ----------------title------------ }}

              <div class='mr-8'>
                {{#if @model.id}}
                  <div class='flex justify-between pb-8'>
                    {{! -----------color----------- }}

                    <Input
                      class='h-6 w-6 mr-4'
                      @type='color'
                      placeholder='color'
                      @value={{this.selectTask.colorTask}}
                    />

                    {{#if this.isTitle}}
                      <Input
                        class='label w-full border py-1 border-gray-200 rounded-lg mx-4'
                        @type='text'
                        @value={{this.selectTask.title}}
                        {{on-click-outside this.titled}}
                      />
                      <img src='/icones/NimbusEdit.svg' alt='crayon' />
                    {{else}}
                      <button
                        type='button'
                        {{on 'click' this.titled}}
                        class='flex justify-between w-full'
                      >
                        <p
                          class='label border border-gray-200 border-opacity-0 py-1'
                        >{{this.selectTask.title}}</p>
                        <img src='/icones/NimbusEdit.svg' alt='crayon' />
                      </button>
                    {{/if}}
                  </div>
                {{else}}
                  <div class='flex justify-between items-center pb-8'>
                    <Input
                      class='h-6 w-6 mr-4'
                      @type='color'
                      placeholder='color'
                      @value={{this.selectTask.colorTask}}
                    />
                    <label
                      class='font-semibold text-sm text-gray-600 block mr-4'
                      for='Titre Task'
                    >Title</label>
                    <Input
                      class='border rounded-lg px-3 py-2 text-sm w-full'
                      @type='text'
                      placeholder='New Task'
                      @value={{this.selectTask.title}}
                    />
                  </div>
                {{/if}}

              </div>
              {{! -------------- Description----------- }}
              <div class='justify-between mr-8'>

                <label class='label' for=''>Description</label>
                {{#if @model.id}}
                  <Textarea
                    class='input resize-none'
                    placeholder='Description du projet'
                    name=''
                    id=''
                    cols='30'
                    rows='12'
                    @value={{this.selectTask.description}}
                  />

                {{else}}
                  <Textarea
                    class='input resize-none'
                    placeholder='Description du projet'
                    name=''
                    id=''
                    cols='30'
                    rows='12'
                    @value={{this.selectTask.description}}
                  />
                {{/if}}
              </div>

              {{! --------------------------TIME------------------------ }}

              <div class='mr-8'>
                {{#if @model.id}}
                  <div class='flex justify-between pb-8'>
                    {{#if this.isTime}}
                      <Input
                        class='label w-full border py-1 border-gray-200 rounded-lg mr-4'
                        @type='time'
                        @value={{this.selectTask.time}}
                        {{on-click-outside this.timed}}
                      />
                      <img src='/icones/NimbusEdit.svg' alt='crayon' />
                    {{else}}
                      <button
                        type='button'
                        {{on 'click' this.timed}}
                        class='flex justify-between w-full'
                      >
                        <p
                          class='label border border-gray-200 border-opacity-0 py-1'
                        >{{this.selectTask.time}}</p>
                        <img src='/icones/NimbusEdit.svg' alt='crayon' />
                      </button>
                    {{/if}}
                  </div>
                {{else}}
                  <div class='flex justify-between'>
                    <label class='label mt-2 mr-4' for='Titre Task'>Time</label>
                    <Input
                      class='input'
                      @type='time'
                      placeholder='date Task'
                      @value={{this.selectTask.time}}
                    />
                  </div>

                {{/if}}
              </div>

              {{! ------------element----------- }}


              <div class='flex mb-4'>
                <label class='mt-2 label' for='selectElement'>Element</label>
                <select name="" id="selectElement" class="mr-8 ml-4">
                  {{#each @model.element as |element|}}
                  {{!-- template-lint-disable no-arguments-for-html-elements --}}
                  <option value={{this.selectTask.element}}>{{element.nameElement}}</option>
                  {{/each}}
                </select>
              </div>


              {{! -------------select user ------------- }}

              <div class='mr-8 flex justify-between items-center'>
                <div class='w-full'>
                  <PowerSelectMultiple
                    @selected={{this.selectedUser}}
                    @options={{this.names}}
                    @onChange={{fn (mut this.selectedUser)}}
                    @onInput={{this.checkLength}}
                    as |name|
                  >

                    {{name}}
                  </PowerSelectMultiple>
                </div>
                <button class='btnPrimary px-12 mx-4' type='submit'>
                  <div class='flex'>
                    <p class='mr-4'> Add</p>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='h-4 w-4 inline-block'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke='currentColor'
                      stroke-width='2'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        d='M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z'
                      ></path>
                    </svg>
                  </div>
                </button>
              </div>
            </div>
            {{! ----------------routes--------- }}
            {{#if @model.id}}
              <div class='flex flex-col justify-around h-full'>
                <div class='mb-4'>
                  <LinkTo
                    @route='projects.id.task.comments'
                    @activeClass='border-b-2 border-blue-600'
                    class='pb-1'
                  >Comments</LinkTo>
                  <LinkTo
                    @route='projects.id.task.checklists'
                    @activeClass='border-b-2 border-blue-600'
                    class='pb-1'
                  >Checklists</LinkTo>
                </div>
                <div class='border'>{{yield @selectTask}}</div>
              </div>
            {{/if}}

          </div>

          <div class='my-2'>
            {{! ------------------USER------------------------ }}

            <div class='flex justify-between items-center'>
              <div class='flex'>
                {{#if @model.id}}

                  {{#each this.selectTask.users as |user|}}
                    <div class='flex w-12 h-12 -m-2'>
                      <img
                        class='object-cover rounded-3xl'
                        src={{user.image}}
                        alt={{user.username}}
                      />
                    </div>
                  {{/each}}
                {{else}}

                {{/if}}
              </div>
              {{! ---------------------------------- }}
              <div class='mt-4 flex justify-end'>
                <button class='btnPrimary px-6 mr-4' type='submit'>
                  {{#if @model.id}}
                    Update
                  {{else}}
                    Create
                  {{/if}}
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='h-4 w-4 inline-block'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke='currentColor'
                    stroke-width='2'
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      d='M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z'
                    ></path>
                  </svg>

                </button>
                <LinkTo @route='projects.id' class='btnCancel px-4'>
                  Annuler
                </LinkTo>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>