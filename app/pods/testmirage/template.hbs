{{page-title 'Testmirage'}}
{{#each @model as |project|}}
  <div class='flex'>

    <p class='bg-red-200'>{{project.projectName}}</p>
    {{#each project.users as |user|}}
      <p class='mx-4 bg-blue-300'>{{user.username}}</p>
      <p class='mx-4 bg-pink-300'>{{user.role.nameRole}}</p>

    {{/each}}

    {{#each project.elements as |element|}}
      <p class='mx-4 bg-green-300'>{{element.nameElement}}</p>

      {{#each element.tasks as |task|}}
        <p class='mx-4 bg-yellow-200'>{{task.title}}</p>

        <p class='mx-4 bg-gray-300'>{{task.type.name}}</p>
        {{#each task.checklists as |tc|}}
          <p class='mx-4 bg-violet-300'>{{tc.title}}</p>
        {{/each}}
      {{/each}}
    {{/each}}

  </div>
{{/each}}
<div class='flex justify-center items-center'>
  {{#each @model as |project|}}

    <div class='bg-gray-100 border border-blue-600 p-2 m-4'>
      <div>
        <div class='w-40 h-40'>
          <img src={{project.image}} alt='imaging' />
          <h1>{{project.projectName}}</h1>
        </div>
      </div>
      <p>{{project.description}}</p>
      {{#each project.users as |user|}}
        <div class='bg-blue-100 border border-blue-600 p-1'>
          <p class='mx-4'>{{user.username}}</p>
          <img src={{user.image}} alt='' class='w-28 h-24' />
        </div>
      {{/each}}
    </div>

  {{/each}}
</div>
{{outlet}}